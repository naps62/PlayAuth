<% content_for :head do %>
  
  <%= stylesheet_link_tag 'play_auth/application' %>
  <% javascript_include_tag 'play_auth/application' %>
<% end %>

<%= render 'play_auth/shared/nav' %>

<% flash.each do |name, msg| %>
  <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
<% end %>

<%= yield %>
